{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "peso/mnb-service",
    "type": "library",
    "description": "Hungarian National Bank data provider for Peso",
    "keywords": ["currency", "exchange", "conversion", "phpeso", "peso", "mnb", "hungarian national bank"],
    "homepage": "https://phpeso.readthedocs.io/",
    "license": "MIT",
    "authors": [{
        "name": "Anton Smirnov",
        "role": "developer",
        "homepage": "https://sandfox.me/",
        "email": "sandfox+phpeso@sandfox.me"
    }],
    "support": {
        "issues": "https://github.com/phpeso/mnb-service/issues",
        "source": "https://github.com/phpeso/mnb-service",
        "docs": "https://phpeso.readthedocs.io/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Services\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Services\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-soap": "*",
        "arokettu/date": "^2.4",
        "arokettu/system-clock": "^2.0",
        "peso/core": "^1.1",
        "psr/simple-cache": "^1 || ^2 || ^3",
        "sabre/xml": "^4.0"
    },
    "require-dev": {
        "arokettu/clock": "^2.7",
        "phpunit/phpunit": "^11.5",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2025.09.17",
        "squizlabs/php_codesniffer": "*",
        "symfony/cache": "^7.3",
        "vimeo/psalm": "^6.12"
    }
}
